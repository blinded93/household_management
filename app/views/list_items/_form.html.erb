<div class="form-group row text-center">
  <div class="col-4">
    <%= f.label :quantity,
          class:'col-form-label' %>
  </div>
  <div class="col-sm-8">
    <%= f.number_field :quantity,
          placeholder:"Quantity",
          class:'form-control form-control-sm' %>
  </div>
</div>

<div class="form-group row text-center">
  <div class="col-4">
    <%= f.label :brand,
          class:'col-form-label' %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :brand,
          placeholder:'Brand',
          class:'form-control form-control-sm' %>
  </div>
</div>

<div class="form-group row text-center">
  <div class="col-4">
    <%= f.label :info,
          class:'col-form-label' %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :info,
          placeholder:'Info',
          class:'form-control form-control-sm' %>
  </div>
</div>

<%= f.hidden_field :list_id,
      value:current_member.list.id %>
