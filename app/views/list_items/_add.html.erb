<div class="modal fade" id="add_list_item" tabindex="-1" role="dialog" aria-labelledby="add_item_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="add_item_title">
          <strong>
            Add Item
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mr-4'>
        <div class="modal-body">
          <%= form_for list_item do |f| %>
            <%= render 'items/form', f:f %>
            <%= render 'list_items/form', f:f %>
        </div>
      </div>
        <div class="modal-footer">
          <%= f.submit "Add",
            class:'btn btn-sm btn-outline-secondary text-dark'
            %>
        </div>
      <% end %>
    </div>
  </div>
</div>
