<div class="modal fade" id="new_list_item_dialog" tabindex="-1" role="dialog" aria-labelledby="new_list_item_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new_list_item_title">
          <strong>
            Add Item
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mr-4'>
        <div class="modal-body">
          <%= form_for list_item, remote:true do |f| %>
            <%= render 'items/form', f:f %>
            <%= render 'list_items/form', f:f %>
        </div>
      </div>
        <div class="modal-footer">
          <%= content_tag :div,
            id:f.object.error_div,
            class:'text-danger small mr-auto' do
            %>
          <% end %>
          <%= f.submit "Add",
            class:btn
            %>
        </div>
      <% end %>
    </div>
  </div>
</div>
