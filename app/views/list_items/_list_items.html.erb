<table class='table table-sm table-hover'>
  <thead>
    <tr>
      <th class='tbl-col-1'></th>
      <th class='tbl-col-3'>Name</th>
      <th class='tbl-col-2'>Brand</th>
      <th class='tbl-col-4'>Info</th>
      <th class='tbl-col-2'>Quantity</th>
    </tr>
  </thead>
  <%= content_tag :tbody,
        id:"list_items_tbody" do %>
    <%= render partial:'list_items/list_items_tr',
          collection:list.list_items,
          as: :list_item,
          locals:{list:list} %>
  <% end %>
</table>
