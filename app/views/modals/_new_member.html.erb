<div class="modal fade" id="new_member" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel"><strong>New Member</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for @member,
        id:'new_member',
        url: household_members_path(current_household) do |f|
        %>
        <div class="modal-body">
          <%= render 'form', f:f %>
          <div class="form-group row">
            <%= f.label :password, "Password",
              class:'col-md-3 col-form-label' %>
            <div class="col-sm-9">
              <%= f.password_field :password,
                placeholder: 'Password',
                class:'form-control form-control-sm' %>
            </div>
          </div>
          <div class="form-check row">
            <div class="col-9">
              <%= f.check_box :head_of_household, class:'form-check-input' %>
              <%= f.label :head_of_household, "Head of Household?", class:'form-check-label' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Create", class:'btn btn-sm' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
