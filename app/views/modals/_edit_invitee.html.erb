<div class="modal fade" id="edit_invitee_<%= invitee.id %>" tabindex="-1" role="dialog" aria-labelledby="edit_invitee_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit_invitee_title">
          <strong>
            Edit Invite
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mx-auto'>
        <%= form_for [current_household, invitee] do |f| %>
          <div class="modal-body">
            <%= render 'invitees/form', f:f %>
          </div>
      </div>
          <div class="modal-footer">
            <%= f.submit "Update and Resend",
              class:'btn btn-sm btn-secondary'
              %>
          </div>
        <% end %>
    </div>
  </div>
</div>
