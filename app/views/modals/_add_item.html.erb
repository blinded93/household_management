<div class="modal fade" id="add_item" tabindex="-1" role="dialog" aria-labelledby="add_item_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="add_item_title">
          <strong>
            Add Item
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mx-auto'>
        <%= form_for list_item do |f| %>
          <div class="modal-body mx-auto">
            <%= f.fields_for :item_attributes do |m| %>
              <div class='form-group row'>
                <%= m.label :name,
                  class:'text-center col-sm-3 col-form-label'
                  %>
                <div class='col-sm-9'>
                  <%= m.text_field :name,
                    list:'item_name_autocomplete',
                    placeholder:'Item Name',
                    class:'form-control form-control-sm'
                    %>
                <datalist id='item_name_autocomplete'>
                  <% @items.each do |item| %>
                    <option value="<%= item %>"></option>
                  <% end %>
                </datalist>
              </div>
            <% end %>
          </div>
            <%= render 'list_items/form', f:f %>
      </div>
    </div>
          <div class="modal-footer">
            <%= f.submit "Add",
              class:'btn btn-sm btn-secondary'
              %>
          </div>
        <% end %>
  </div>
</div>
