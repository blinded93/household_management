<div class="modal fade" id="new_room" tabindex="-1" role="dialog" aria-labelledby="new_room_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new_room_title">
          New Rooms
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for @room,
          url:[current_household, @room] do |f|
          %>
          <%= render 'rooms/form', f:f %>
      </div>
      <div class="modal-footer">
          <%= f.submit "Create",
            class:'btn btn-sm btn-outline-secondary text-dark'
            %>
        <% end %>
      </div>
    </div>
  </div>
</div>
