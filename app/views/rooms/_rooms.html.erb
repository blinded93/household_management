<div class="row">
  <div class="col text-right">
    <%= link_to "Add Room",
      'rooms/new',
      data:{toggle:'modal',
            target:'#new_room'},
      class:btn_classes
      %>
      <br>
    <%= render 'rooms/new' %>
  </div>
</div>
<div class='row'>
  <div class="col-2">
  </div>
  <div class=' pr-0 col-4 text-center'>
    <table class="table table-sm" id='community_rooms'>
      <thead>
        <tr>
          <th>Community</th>
        </tr>
      </thead>
      <tbody>
        <% current_household.rooms.unowned.each do |room| %>
          <tr>
            <td>
              <%= link_to room.name,
                "edit_room_#{room.id}",
                data:{toggle:'modal',
                      target:"#edit_room_#{room.id}"
                      },
                      class:link_classes
                  %>
              <%= render 'rooms/edit', room:room %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class='pl-0 col-4 text-center'>
    <table class='table table-sm' id='bedrooms'>
      <thead>
        <tr>
          <th>Bedrooms</th>
        </tr>
      </thead>
      <tbody>
        <% current_household.rooms.owned.each do |room| %>
          <tr>
            <td>
              <%= room.member.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-2">
  </div>
</div>
</table>
