$('#dialog').modal('toggle');
<% bill.scopes.each do |scope, scope_title| %>
  $("#<%= "#{scope.to_s}_bills_badge" %>").html("<%= Bill.send(scope).count %>");
  $("#<%= "bills_#{scope.to_s}_tbody" %>").prepend("<tr class='<%= bill.row_id %>'></tr>");
  $(".<%= bill.row_id %>").html("<%= j render "bills/bill", bill:bill %>");
<% end %>
$("#remaining_bills_amount").html("Remaining Monthly Expenses: <%= remaining_expenses %>");
