<div class="modal fade" id="edit_bill_<%= bill.id %>" tabindex="-1" role="dialog" aria-labelledby="edit_bill_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit_bill_title">
          <strong>
            Edit <%= bill.company %> Bill
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mr-4'>
        <%= form_for [current_household, bill],
          id:'edit_bill' do |f|
          %>
          <div class="modal-body">
            <%= render 'bills/form', f:f %>
          </div>
      </div>
          <div class="modal-footer">
            <%= link_to "Delete",
              [current_household, bill],
              class:'btn btn-sm btn-outline-secondary text-danger',
              method:'delete',
              data:{confirm:"Delete bill?"}
              %>
            <%= f.submit "Update",
              class:'btn btn-sm btn-outline-secondary text-dark'
              %>
          </div>
        <% end %>
    </div>
  </div>
</div>
