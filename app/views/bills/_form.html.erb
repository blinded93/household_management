<div class="form-group row">
  <%= f.label :company,
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class="col-sm-9">
    <%= f.text_field :company,
      placeholder:'Company',
      class:'form-control form-control-sm'
    %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :utility,
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class="col-sm-9">
    <%= f.text_field :utility,
      placeholder:'Utility',
      class:'form-control form-control-sm'
    %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :amount,
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class="input-group col-sm-9">
    <div class='input-group-addon'>
      $
    </div>
      <%= f.number_field :amount,
        placeholder:'Amount',
        class:'form-control form-control-sm'
        %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :account_number, "Account#",
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class="col-sm-9">
    <%= f.number_field :account_number,
      placeholder:'Account No. (optional)',
      class:'form-control form-control-sm'
    %>
  </div>
</div>

<div class='form-group form-inline row'>
  <%= f.label :due_date, 'Due',
    class:'col-sm-3 col-form-label'
    %>
  <div class='col-sm-9'>
    <%= f.date_select :due_date,
    { use_two_digit_numbers:true,
      start_year:Date.today.year,
      end_year:Date.today.year + 1,
      order: [:year, :month, :day],
      prompt:{ year:'Yr',
               month:'Mo',
               day:'Day'
              }
     },
      {class:'form-control form-control-sm'}
     %>
  </div>
</div>
