<div class="modal fade" id="new_chore" tabindex="-1" role="dialog" aria-labelledby="new_chore_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new_chore_title">
          <strong>
            Create Chore
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mr-4'>
        <%= form_for chore,
          url:[current_household, chore],
          remote:true do |f| %>
          <div class="modal-body">
            <%= render 'chores/form', f:f %>
          </div>
      </div>
          <div class="modal-footer">
            <div id='chore_errors' class='text-danger small mr-auto'>
            </div>
            <%= f.submit "Create",
              class: 'btn btn-sm btn-outline-secondary text-dark'
              %>
          </div>
        <% end %>
    </div>
  </div>
</div>
