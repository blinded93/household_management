<table class='table table-sm table-hover'>
  <thead>
    <tr>
      <th>Done?</th>
      <th>Task</th>
      <th>Due</th>
    </tr>
  </thead>
  <tbody>
    <%= form_tag '/chores/complete' do %>
      <%= render @chores %>
      <%= hidden_field_tag 'scope', params[:scope] %>
      <%= submit_tag "Complete Chores", class: 'btn btn-sm' %>
    <% end %>
  </tbody>
</table>
