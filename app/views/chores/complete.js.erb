$(".<%= @chore.row_id %>").remove();

<% @old_scopes.each do |scope, scope_title| %>
  $("#<%= "#{scope.to_s}_chores_badge" %>")
      .html("<%= current_member.chores.send(scope).count %>");
<% end %>

<% @chore.scopes.each do |scope, scope_title| %>
  $("#<%= "#{scope.to_s}_chores_badge" %>")
      .html("<%= current_member.chores.send(scope).count %>");
  $("#<%= "chores_#{scope.to_s}_tbody" %>")
      .append("<tr class='<%= @chore.row_id %>'></tr>");
<% end %>

$(".<%= @chore.row_id %>")
    .html("<%= j render "chores/chore", chore:@chore %>");

<% if @chore.completed %>
  $(".complete_<%= @chore.row_id %>").addClass("strike");
<% else %>
  $(".complete_<%= @chore.row_id %>").removeClass("strike");
<% end %>
