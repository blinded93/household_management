<div class='form-group row'>
  <%= f.label :recipient_id,
    "To:",
    class: 'text-center col-md-3 col-form-label'
    %>
  <div class='col-sm-9'>
    <%= f.collection_select(:recipient_id,
      current_household.members,
      :id,
      :first_name,
      {prompt: 'Select Member'},
      {class: 'custom-select form-control-sm'})
      %>
  </div>
</div>
<div class='form-group row'>
  <%= f.label :subject,
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class='col-sm-9'>
    <%= f.text_field :subject,
      class:'form-control form-control-sm',
      placeholder: "Subject"
      %>
  </div>
</div>
<div class='form-group row'>
  <%= f.label :body,
    "Message",
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class='col-sm-9'>
    <%= f.text_area :body,
      placeholder: "Message",
      class:'form-control form-control-sm'
      %>
  </div>
  <%= f.hidden_field :sender_id,
    value: current_member.id
    %>
</div>
