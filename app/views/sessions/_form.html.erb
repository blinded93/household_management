<div class="form-group row text-center">
  <div class="col-4">
    <%= label_tag :email,
          nil,
          class:'col-form-label' %>
  </div>
  <div class="col-8">
    <%= text_field_tag :email,
          nil,
          placeholder: "Email",
          class:'form-control form-control-sm' %>
   </div>
</div>

<div class="form-group row text-center">
  <div class="col-4">
    <%= label_tag :password,
          nil,
          class:'col-form-label' %>
  </div>
  <div class="col-8">
    <%= password_field_tag :password,
          nil,
          placeholder: "Password",
          class:'form-control form-control-sm' %>
  </div>
</div>
