<div class="form-group row">
  <%= label_tag :email,
        nil,
        class:'col-3 col-form-label' %>
  <%= text_field_tag :email,
        nil,
        {placeholder: "Email",
         class:'form-control form-control-sm col-8'} %>
</div>

<div class="form-group row">
  <%= label_tag :password,
        nil,
        class:'col-3 col-form-label' %>
  <%= password_field_tag :password,
        nil,
        {placeholder: "Password",
         class:'form-control form-control-sm col-8'} %>
</div>
