<div id="#Accordion_member_<%= member.id %>" data-children=".item">
  <div class="item">
    <a  class='btn btn-sm' data-toggle="collapse" data-parent="#Accordion_member_<%= member.id %>" href="#member_<%= member.id %>" aria-expanded="true" aria-controls="member_<%= member.id %>">
      <%= member.name %>
    </a>
    <div id="member_<%= member.id %>" class="collapse" role="tabpanel">
      <div class="row">
        <div class="col">
        </div>
        <div class="col-10">
          <h6>
            Chores
            <span class="badge badge-default badge-pill">
            <%= member.chores.count %>
            </span>
          </h6>
          <h6>
            Needs
            <span class="badge badge-info">
            <%= member.list.size %>
            </span>
          </h6>
          <br>
          <%= form_for member, url: household_member_path(current_household, member) do |f| %>
            <%= render 'members/form', f: f %>
            <div class="form-check row">
              <div class="col-9">
                <%= f.check_box :head_of_household, class:'form-check-input' %>
                <%= f.label :head_of_household, "Head of Household?", class:'form-check-label' %>
              </div>
            </div>
            <%= f.submit "Update", class:'btn btn-sm' %>
          <% end %>
          <br>
        </div>
        <div class="col">
        </div>
      </div>
    </div>
  </div>
</div>
