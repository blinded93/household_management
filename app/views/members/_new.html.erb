<div class="modal fade" id="new_member" tabindex="-1" role="dialog" aria-labelledby="new_member_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new_member_title">
          <strong>
            New Member
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mx-auto'>
        <%= form_for [current_household, @member],
          id:'new_member' do |f|
          %>
          <div class="modal-body">
            <%= render 'members/form', f:f %>
            <div class="form-check row">
              <div class="col-9">
                <%= f.check_box :head_of_household,
                  class:'form-check-input'
                  %>
                <%= f.label :head_of_household,
                  "Head of Household?",
                  class:'form-check-label'
                  %>
              </div>
            </div>
          </div>
      </div>
          <div class="modal-footer">
            <%= f.submit "Create",
              class:'btn btn-sm btn-outline-secondary text-dark'
              %>
          </div>
        <% end %>
    </div>
  </div>
</div>
