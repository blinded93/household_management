<p>
  <a class="btn btn-sm btn-secondary" data-toggle="collapse" href="#chores" aria-expanded="false" aria-controls="collapseExample">
    Chores
  </a>
  <a class="btn btn-sm btn-secondary" data-toggle="collapse" href="#list"  aria-expanded="false" aria-controls="collapseExample">
    <%= current_member.plural %> <%= current_member.room.try(:name) %>
  </a>
  <a class="btn btn-sm btn-secondary" data-toggle="collapse" href="#messages"  aria-expanded="false" aria-controls="collapseExample">
    Unread Messages
  </a>
</p>
<div class="collapse show" id="chores">
  <div class="card card-block">
    <% Chore.scopes.each do |scope, scope_title| %>
      <%= render 'chores/all', {scope_title: scope_title, scope: scope, chores: @chores} %>
    <% end %>
  </div>
</div>
<div class="collapse" id="list">
  <div class="card card-block">
    <% content_for :add_item do %>
      <h5>
        <strong>
          Household/Member Needs
        </strong>
        <small>
           - <%= link_to "Add", new_item_path(current_member),
           data:{ toggle:'modal',
           target:"#add_item" },
           class:'btn btn-sm' %>
         </small>
       </h5>
       <%= render 'modals/add_item', list_item:@list_item %>
     <% end %>
     <%= render 'lists/list', member:current_member %>
  </div>
</div>
<div class="collapse" id="messages">
  <div class="card card-block">
    <table class='table table-sm table-hover'>
      <thead>
        <h5>
          <strong>
            Notes/Personal Requests
          </strong> -
          <small>
            <%= link_to "New", new_member_message_path(current_member),
              class:'btn btn-sm',
              data:{ toggle:'modal', target:'#new_message' }
              %>
          </small>
        </h5>
        <%= render 'modals/new_message', message:@message %>
        <tr>
          <th class='col-3'>
            Sent
          </th>
          <th>
            Subject
          </th>
          <th class='col-2'>
            Sender
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render current_member.recieved_messages %>
      </tbody>
    </table>
  </div>
</div>
