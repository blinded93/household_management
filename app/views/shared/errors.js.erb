<% obj.completed_fields.each do |field| %>
  <% unless field == :item_id || :password %>
    var el = document.getElementById("<%= obj.id_name(field) %>");
    el.classList.remove("border");
    el.classList.remove("border-danger");
  <% end %>
<% end %>
<% obj.errors.messages.each do |field, error| %>
    var el = document.getElementById("<%= obj.id_name(field) %>");
    el.classList.add("border");
    el.classList.add("border-danger");
<% end %>
document.getElementById("<%= obj.error_div %>").innerHTML = "<%= j render 'shared/errors', obj:obj %>";
