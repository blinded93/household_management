<% if obj.errors.any? %>
  <% obj.errors.messages.each do |field, error| %>
      document.getElementById("<%= obj.id_name(field).html_safe %>").className += " border border-danger";
      document.getElementById("<%= obj.id_name(field).html_safe %>").placeholder = "<%= error.first.capitalize.html_safe %>";
   <% end %>
   document.getElementById("<%= obj.class_name %>_errors").innerHTML = "<%= j render 'shared/errors', obj:obj %>";
<% else %>
  $('#new_<%= obj.class_name %>').modal('toggle');
  window.location.replace("<%= house_redirect(tab, scope) %>");
<% end %>
