<div class="row">
  <div class="col-12 text-center">
    <div class="">
      <%= link_to [current_household, :calendar, date:@date - 1.month],
        class:"btn btn-default font-blk" do
        %>
        <i class="glyphicon glyphicon-backward"><</i>
      <% end %>
      <%= "#{@date.strftime("%b")} #{@date.year}" %>
      <%= link_to [current_household, :calendar, date:@date + 1.month],
        class: "btn btn-sm font-blk" do
        %>
        <i class="glyphicon glyphicon-forward">></i>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 p-0 m-0">
    <%= calendar @date do |date| %>
      <% if @bills[date] %>
        <%= link_to date.day,
          [current_household, :calendar, date:date],
          data:
            {toggle:'modal',
             target:"#day_#{date.to_s}"
            },
          class:'btn btn-sm btn-block text-left font-blk'
          %>
        <small>
          <% @bills[date].each do |bill| %>
            <div class='small mark'>
              <%= bill.utility %>
            </div>
          <% end %>
        </small>
        <%= render 'modals/day', bills:@bills[date], date:date %>
      <% else %>
        <%= date.day %>
      <% end %>
    <% end %>
  </div>
</div>
