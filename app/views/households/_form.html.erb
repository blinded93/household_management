<%= form_for @household do |f| %>
  <p>
    <%= f.text_field :name, placeholder: "Name" %>
  </p>
  <p>
    <%= f.text_field :address1, placeholder: "Address 1" %>
  </p>
  <p>
    <%= f.text_field :address2, placeholder: "Address 2" %>
  </p>
  <p>
    <%= f.text_field :city, placeholder: "City" %>
  </p>
  <p>
    <%= f.text_field :state, placeholder: "State" %>
  </p>
  <p>
    <%= f.number_field :zip_code, placeholder: "Zip Code" %>
  </p>
  <p>
    <fieldset>
      <legend>Create Member</legend>
      <%= f.fields_for :members, @member do |m| %>
        <%= render 'members/form', f:m %>
        <%= m.hidden_field :head_of_household, value: true %>
      <% end %>
    </fieldset>
  </p>
  <%= f.submit %>
<% end %>
