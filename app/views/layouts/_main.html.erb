<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="">
        HouseholdManagement
        <small class='text-muted'>
          :<span id="household_name"><%= current_household.name %></span> =>
          <% if admin? %>
            <span class='text-success'>
              Admin
            </span>
            (<%= link_to current_member.name,
                    member_path(current_member),
                    class:'btn btn-sm text-warning p-0 m-0' %>)
          <% else %>
            <span class='text-success'>
              <span id="member_name"><%= current_member.first_name %></span>
            </span>
            <% if current_member.head_of_household? %>
              (<%= link_to "Admin",
                      [current_household, :control],
                      class:'btn btn-sm text-warning p-0 m-0' %>)
            <% end %>
          <% end %>
        </small>
      </h4>
    </div>
    <div class='col-1 small nav-link'>
      <%= logout_btn %>
    </div>
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-8">
      <%= yield %>
    </div>
    <div class="col">
    </div>
  </div>
</div>
