<h1 class="navbar-brand">
  HouseholdManagement
  <small class='text-muted'>
    :<%= current_household.name %> =>
    <span class='text-success'>
      <%= current_member.first_name %>
    </span>
    <% if current_member.head_of_household? %>
      (<%= link_to "Admin",
        [current_household, :control],
        class:'btn btn-sm p-0 m-0'
        %>)
    <% end %>
  </small>
</h1>
<div class="collapse navbar-collapse" id="navbarNavDropdown">
  <ul class="navbar-nav">
    <li>
      <%= link_to "Home",
        current_member,
        class:'nav-link'
        %>
    </li>
    <li>
      <%= link_to "Inbox",
        member_inbox_path(current_member),
        class:'nav-link'
        %>
    </li>
    <li>
      <%= link_to "Logout",
        logout_path,
        class:'nav-link',
        method: 'delete',
        data:{confirm: "Are you sure you want to log out?"}
        %>
    </li>
  </ul>
</div>
