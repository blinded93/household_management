  <ul class="navbar-nav">
    <li>
      <%= link_to "Home", member_path(current_member), class:'nav-link' %>
    </li>
    <li>
      <%= link_to "Inbox", member_inbox_path(current_member), class:'nav-link' %>
    </li>
    <% if head_of_household? %>
    <li>
      <%= link_to "Household Control", household_control_path(current_household), class:'nav-link' %>
