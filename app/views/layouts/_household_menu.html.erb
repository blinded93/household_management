<h1 class="navbar-brand">
  HouseholdManagement
  <small class='text-muted'>
    :<%= current_household.name %> =>
    <span class='text-success'>
      Admin
    </span>
    (<%= link_to current_member.name,
      member_path(current_member),
      class:'btn btn-sm p-0 m-0'
      %>)
  </small>
  </h1>
<div class="collapse navbar-collapse" id="navbarNavDropdown">
  <ul class="navbar-nav">
    <li>
      <%= link_to "Home",
        household_control_path(current_household),
        class:'nav-link'
        %>
    </li>
    <li>
      <%= link_to "Members",
        household_members_path(current_household),
        class:'nav-link'
        %>
    </li>
    <li>
      <%= link_to "Rooms",
        household_rooms_path(current_household),
        class:'nav-link'
        %>
    </li>
    <li>
      <%= link_to "Calendar",
      [current_household, :calendar],
      class:'nav-link' %>
    </li>
    <li>
      <%= link_to "Logout",
        logout_path,
        class:'nav-link',
        method: 'delete',
        data:{confirm: "Are you sure you want to log out?"}
        %>
    </li>
  </ul>
</div>
