<div class="form-group row">
  <%= f.label :name,
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class="col-sm-9">
    <%= f.text_field :name,
      placeholder: "Name",
      class:'form-control form-control-sm'
      %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :email,
    class:'text-center col-sm-3 col-form-label'
    %>
  <div class="col-sm-9">
    <%= f.email_field :email,
      placeholder: "Email",
      class:'form-control form-control-sm'
      %>
  </div>
</div>
