<% if request_action %>
  $("#room_item_<%= room_item.id %>").toggleClass("table-danger");
  <% if @room_item.request %>
    $("#inventory_request").html("<%= room_item.item.name %> requested.");
    $("#undo_request").html("<%= j undo_btn %>");
  <% else %>
    $("#inventory_request").html("Request for <%= room_item.item.name %> undone.");
    $("#undo_request").html("");
  <% end %>
<% else %>
  $("#room_item_<%= room_item.id %>").removeClass("table-danger");
  $("#inventory_request").html("Request for <%= room_item.item.name %> undone.");
  $("#undo_request").html("");
<% end %>
