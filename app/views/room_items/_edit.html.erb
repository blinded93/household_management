<div class="modal fade" id="edit_room_item_<%= item.id %>" tabindex="-1" role="dialog" aria-labelledby="edit_room_item_title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="edit_room_item_title">
          <strong>
            Edit <%= item.name %>
          </strong>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class='mr-4'>
        <div class="modal-body">
          <%= form_for list_item do |f| %>
            <%= render 'room_items/form', f:f %>
        </div>
      </div>
        <div class="modal-footer">
          <%= link_to "Delete",
            room_item_path(room_item),
            class:'btn btn-sm btn-outline-danger',
            method: 'delete',
            params:{room_item:room_item.id}
            %>
          <%= f.submit "Update",
            class:'btn btn-sm btn-outline-secondary text-dark'
            %>
        </div>
        <% end %>
    </div>
  </div>
</div>
